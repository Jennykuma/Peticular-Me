<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jennykuma.peticularme.Profile">

    <View
        android:id="@+id/profile_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="150dp"

        android:background="@drawable/prof_pic_rectangle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/profile_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/profile_rectangle"
        android:layout_centerHorizontal="true"

        android:text="Carlos Sepulveda"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:text="Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:layout_marginBottom="11dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:onClick="openBottomSheet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/profile_gender"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Gender:"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/pet_birthday_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="05-12-1996"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/profile_birthday"
        android:layout_alignBottom="@+id/profile_birthday"
        android:layout_alignLeft="@+id/pet_gender_answer"
        android:layout_alignStart="@+id/pet_gender_answer" />

    <TextView
        android:id="@+id/profile_birthday"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Birthday:"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/profile_gender"
        android:layout_alignLeft="@+id/profile_gender"
        android:layout_alignStart="@+id/profile_gender" />

    <TextView
        android:id="@+id/pet_description_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Small dog, big bark"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/profile_description"
        android:layout_alignBottom="@+id/profile_description"
        android:layout_alignRight="@+id/share"
        android:layout_alignEnd="@+id/share"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:id="@+id/pet_gender_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Female"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/profile_gender"
        android:layout_alignBottom="@+id/profile_gender"
        android:layout_alignLeft="@+id/pet_description_answer"
        android:layout_alignStart="@+id/pet_description_answer" />

    <TextView
        android:id="@+id/pet_breed_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Pomeranian"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/profile_breed"
        android:layout_alignBottom="@+id/profile_breed"
        android:layout_alignLeft="@+id/pet_description_answer"
        android:layout_alignStart="@+id/pet_description_answer" />

    <TextView
        android:id="@+id/profile_breed"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Breed:"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/profile_gender"
        android:layout_alignLeft="@+id/profile_gender"
        android:layout_alignStart="@+id/profile_gender" />

    <TextView
        android:id="@+id/profile_description"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Description:"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/pet_breed_answer"
        android:layout_alignLeft="@+id/profile_breed"
        android:layout_alignStart="@+id/profile_breed" />

</RelativeLayout>