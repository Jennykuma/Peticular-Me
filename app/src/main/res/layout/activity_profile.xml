<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jennykuma.peticularme.Profile">

    <View
        android:id="@+id/profile_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="150dp"

        android:background="@drawable/prof_pic_rectangle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/profile_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/profile_rectangle"
        android:layout_centerHorizontal="true"

        android:text="Carlos Sepulveda"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/profile_gender"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Gender: Female"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/profile_birthday"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Birthday: 05-12-1996"
        android:textSize="18dp"
        android:layout_below="@+id/profile_fullName"
        android:layout_alignLeft="@+id/profile_gender"
        android:layout_alignStart="@+id/profile_gender"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/profile_breed"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Breed: Pomeranian"
        android:textSize="18dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/profile_gender"
        android:layout_alignLeft="@+id/profile_gender"
        android:layout_alignStart="@+id/profile_gender" />

    <TextView
        android:id="@+id/profile_description"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Description: Small Dog, Big Bark"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/profile_breed"
        android:layout_alignLeft="@+id/profile_breed"
        android:layout_alignStart="@+id/profile_breed" />

    <Button
        android:text="Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/profile_fullName"
        android:layout_toEndOf="@+id/profile_fullName"
        android:layout_marginBottom="13dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:onClick="openBottomSheet"
        />

</RelativeLayout>